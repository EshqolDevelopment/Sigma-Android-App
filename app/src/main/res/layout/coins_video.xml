<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="340dp"
    android:layout_height="250dp"
    android:maxHeight="250dp"

    android:background= "@drawable/pop_up_background_new">


    <TextView
        android:id="@+id/language"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:textSize="19dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="You are missing some coins\nfor a game"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp" android:layout_alignParentEnd="true" android:layout_marginEnd="21dp"
        android:layout_centerHorizontal="true"/>
    <ImageView
        android:layout_width="39dp"
        android:layout_height="38dp"
        app:srcCompat="@drawable/x_ico"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:id="@+id/imageView9"
        android:layout_marginTop="11dp"
        android:layout_marginStart="6dp"/>
    <TextView
            android:text="Don't worry you can watch a quick video and earn 500 coins for free."
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_height="wrap_content" android:layout_alignParentStart="true"
            android:layout_marginStart="5dp" android:id="@+id/textView22"
            android:layout_marginTop="90dp" android:layout_alignParentTop="true" android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp" android:layout_centerInParent="true"/>
    <ImageView
        android:background="?attr/selectableItemBackground"
        android:layout_width="192dp"
        android:layout_height="103dp" app:srcCompat="@drawable/video_icon"
        android:layout_alignParentStart="true" android:layout_marginStart="80dp"
        android:layout_alignParentBottom="true" android:layout_marginBottom="5dp" android:id="@+id/add"
        android:layout_alignParentEnd="true" android:layout_marginEnd="68dp"
        android:layout_centerHorizontal="true" android:layout_marginTop="2dp"
        android:layout_below="@+id/textView22"/>

</RelativeLayout>