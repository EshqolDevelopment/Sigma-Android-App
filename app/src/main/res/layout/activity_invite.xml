<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="340dp"
        android:layout_height="300dp"
        android:maxHeight="300dp"
        android:background= "@drawable/pop_up_background_new">


    <TextView
            android:id="@+id/platform2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Play with friends"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="16dp" />

    <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:srcCompat="@drawable/x_ico"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:id="@+id/imageView9"
            android:layout_marginTop="5dp"
            android:layout_marginStart="7dp" />

    <ImageView
            android:layout_width="47dp"
            android:layout_height="46dp"
            app:srcCompat="@drawable/share1"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:id="@+id/imageView14"
            android:layout_marginTop="177dp"
            android:layout_marginStart="126dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="77dp"/>

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="43dp"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="183dp"
        android:layout_marginTop="181dp"
        android:layout_marginBottom="77dp"
        app:srcCompat="@drawable/share2" />

    <TextView
            android:text="Invitation code"
            android:gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="30dp"
            android:layout_width="261dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="37dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="78dp"
            android:id="@+id/textView13"
            android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="61dp"
        android:layout_below="@+id/textView13"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="121dp"
        android:gravity="center"
        android:text="3424234276"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/black"
        android:onClick="waitingRoom"
        android:text="Start waiting" />

</RelativeLayout>