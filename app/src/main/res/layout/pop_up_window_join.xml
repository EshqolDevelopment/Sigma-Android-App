<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="340dp"
        android:layout_height="250dp"
        android:maxHeight="250dp"
        android:background= "@drawable/pop_up_background_new">

    <TextView
            android:id="@+id/platform"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Play with friends"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="12dp"/>

    <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:srcCompat="@drawable/x_ico"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:id="@+id/imageView99"
            android:layout_marginTop="5dp"
            android:layout_marginStart="7dp"/>

    <EditText
            android:layout_width="267dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text=""
            android:hint="Write Yore invitation code here"
            android:ems="10"
            android:layout_alignParentTop="true"
            android:layout_marginTop="90dp"
            android:id="@+id/textCode"
            android:layout_centerInParent="true" />

    <Button
            android:text="Join"
            android:backgroundTint="@color/Black_Cat"
            android:layout_width="92dp"
            android:layout_height="14dp" android:layout_alignParentStart="true"
            android:layout_marginStart="41dp" android:layout_alignParentBottom="true" android:layout_marginBottom="28dp"
            android:id="@+id/join" android:layout_marginTop="208dp" android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" android:layout_marginEnd="207dp"/>
    <Button
            android:backgroundTint="@color/Black_Cat"
            android:text="Invite"
            android:layout_width="85dp"
            android:layout_height="14dp" android:layout_alignParentEnd="true" android:layout_marginEnd="40dp"
            android:layout_alignParentBottom="true" android:layout_marginBottom="27dp" android:id="@+id/invite"
            android:layout_marginTop="209dp" android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" android:layout_marginStart="215dp"/>

</RelativeLayout>