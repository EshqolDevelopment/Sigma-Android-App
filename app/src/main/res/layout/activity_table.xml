<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:id="@+id/mainLayout"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="65dp">

    <ImageView
            android:id="@+id/profile_image4"
            android:layout_width="37dp"
            android:layout_height="37dp"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"
            tools:ignore="MissingConstraints"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.027"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toEndOf="@+id/county_flag"/>
    <androidx.cardview.widget.CardView
            android:layout_width="409dp"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="65dp">

    </androidx.cardview.widget.CardView>

    <TextView
            android:text="name"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/textView123"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.031" app:layout_constraintVertical_bias="0.545"
            app:layout_constraintStart_toEndOf="@+id/profile_image4"/>
    <TextView
            android:text="TextView"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/score_rank"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.917"
            app:layout_constraintVertical_bias="0.545"/>

    <TextView
            android:text="1"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/pos_rank"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.04"
            app:layout_constraintVertical_bias="0.545"
            android:layout_marginStart="-10dp" />

    <ImageView
            android:layout_width="52dp"
            android:layout_height="48dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/medals"
            app:layout_constraintEnd_toStartOf="@+id/score_rank"
            android:layout_marginEnd="8dp"
            app:layout_constraintVertical_bias="0.551" />

    <ImageView
            android:layout_width="22dp"
            android:layout_height="19dp"
            app:srcCompat="@drawable/israel"
            android:id="@+id/county_flag"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/pos_rank"
            app:layout_constraintBottom_toBottomOf="@+id/pos_rank"
            app:layout_constraintHorizontal_bias="0.029"
            app:layout_constraintStart_toEndOf="@+id/pos_rank"/>


</androidx.constraintlayout.widget.ConstraintLayout>